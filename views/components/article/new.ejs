<div ng-init="editor.init('article-editor')" ng-controller='articleNewController'>

	<div ng-if='api.error' class="uk-alert uk-alert-danger" uk-alert>
	    <a class="uk-alert-close" uk-close></a>
		{{ api.error }}
	</div>

	<input type="text" class="uk-input" ng-model='article.title' placeholder="Title">
	<br>
	<input type="text" class="uk-input" ng-model='article.module' placeholder="Module">

	<div>
		<div id='article-editor'></div>
	</div>
	
	<div ng-if='api.loading' uk-spinner></div>
	
	<button ng-if='!api.loading' class="uk-button uk-button-primary" ng-click='api.submit()'>POST</button>
</div>