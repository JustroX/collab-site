<div ng-controller='challengeEditController' ng-init='editor.init("challenge-editor-edit")'>
	
	<input type="text" class="uk-input" ng-model='api.view.target'>
	<a href="javascript:void(0)" ng-click="api.view.load()">Load</a>
	
	{{model}}
	<input type="text" class="uk-input" ng-model='model.title' placeholder="Title">	
	<div>
		<div id='challenge-editor-edit'></div>
	</div>	
	<br>
	<input type="text" class="uk-input" ng-model='model.module' placeholder="Module">
	

    <div class="uk-margin">
        <select class="uk-select" ng-model='model.output_type'>
            <option selected="selected" value="0">Code</option>
            <option value="1">Single Value</option>
        </select>
    </div>



	<div ng-if='api.view.loading' uk-spinner></div>
	<div ng-if='api.error' class="uk-alert uk-alert-danger" uk-alert>
	    <a class="uk-alert-close" uk-close></a>
		{{ api.error }}
	</div>
	<div ng-if='api.loading' uk-spinner></div>
	


	<button ng-click='api.submit()' class="uk-button uk-button-primary">UPDATE</button>

</div>