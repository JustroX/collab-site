<div ng-controller='moduleEditController'>
	<div class="uk-padding-large uk-padding-remove-top">
		<div class="uk-child-width-1-4" uk-grid>
			<div uk-sticky="offset: 0" class="uk-padding-remove">
				<br><br>
				<h3 style="margin-top: 10px">Module Editor</h3>
				<h5>CONFIGURATION</h5>
			    <ul class="uk-nav uk-nav-default">
			        <li><a href="javascript:void(0)" uk-toggle='target: #modal-module-title' ><span uk-icon="icon: bookmark"></span> Module Title</a></li>
			        <li><a href="javascript:void(0)" uk-toggle='target: #modal-module-badge' ng-click='open_modal_badge()' ><span uk-icon="icon: bookmark"></span> Badge Rewards</a></li>
			        <li>
			        	<a href="javascript:void(0)" ng-click='delete_module()' class="uk-link-muted" uk-toggle='target: #modal-module-delete'><span uk-icon="icon: bookmark"></span> Delete Module</a>
						<handler bind='{{ module.api.delete.config.id }}' >
							<div id="modal-module-delete" uk-modal>
							    <div class="uk-modal-dialog uk-modal-body">
							        <h2 class="uk-modal-title">Are you sure you want to delete this module?</h2>
							        <p style="color: red;">This includes all submissions, articles, and challenges in this module. Note: action can not be undone.</p>
							        
							        <div ng-show='$ctrl.api.config.state.loading'><div uk-spinner></div></div>
							        <p ng-hide='$ctrl.api.config.state.loading' class="uk-text-right">
							            <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
							            <button ng-click='$ctrl.submit()' class="uk-button uk-button-danger" type="button">Delete</button>
							        </p>
							    </div>
							</div>
						</handler>

			        </li>
			    </ul>
				<h5>PAGES</h5>
				<div>
					<div style="max-height: 30vh; overflow-y: scroll; width: 80%">
							<small>
								<div ng-show='pages_loading'><div uk-spinner></div></div>
								<div ng-hide='pages.length'>Nothing here.</div>
								<ul ng-hide='pages_loading' uk-accordion="collapsible: true" style="padding: 0px">
								    <li ng-repeat='i in pages' style="padding: 0px; margin:0px">
								        <a class="uk-accordion-title" href="#"><small>{{i.content.title}}</small></a>
								        <div class="uk-accordion-content">
								            <p>
								            	<a href="javascript:void(0)" ng-click='edit[i.mode](i[i.mode])'  class="uk-icon-button uk-margin-small-right" uk-icon="file-edit"></a>
								            	<a href="javascript:void(0)" ng-click='delete[i.mode](i[i.mode],$index)' class="uk-icon-button uk-margin-small-right" uk-icon="trash"></a>
								            	<!-- <div>
													<div id="modal-article-delete-{{$index}}" uk-modal>
													    <div class="uk-modal-dialog uk-modal-body">
													        <h2 class="uk-modal-title">Are you sure you want to delete Article?</h2>
													    	<div ng-show='api.error' class="uk-alert-danger">{{api.error}}</div>
													        <p style="color: red;">Note: action can not be undone.</p>
													        
													        <div ng-show='api.loading'><div uk-spinner></div></div>
													        <p ng-hide='api.loading' class="uk-text-right">
													            <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
													            <button ng-click='api.delete()' class="uk-button uk-button-danger" type="button">Delete</button>
													        </p>
													    </div>
													</div>
												</div>
												<div>
													<div id="modal-challenge-delete-{{$index}}" uk-modal>
													    <div class="uk-modal-dialog uk-modal-body">
													        <h2 class="uk-modal-title">Are you sure you want to delete Challenge?</h2>
													    	<div ng-show='api.error' class="uk-alert-danger">{{api.error}}</div>
													        <p style="color: red;">Note: action can not be undone.</p>
													        
													        <div ng-show='api.loading'><div uk-spinner></div></div>
													        <p ng-hide='api.loading' class="uk-text-right">
													            <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
													            <button ng-click='api.delete()' class="uk-button uk-button-danger" type="button">Delete</button>
													        </p>
													    </div>
													</div>
												</div> -->
								            </p>
								        </div>

								    </li>
								</ul>
							</small>
					</div>
				</div>
				<h5>NEW PAGE</h5>
				<ul class="uk-nav uk-nav-default">
			        <li>
			        	<handler bind='article-new' model='{ title:"New Article", content: "", module: module_id }'>
			        		<div ng-show='$ctrl.api.config.state.loading'><div uk-spinner></div></div>
			        		<div ng-show='$ctrl.api.config.error'>{{api.error}}</div>
				        	<a ng-hide='$ctrl.api.config.state.loading' class="uk-link-muted" href="javascript:void(0)" ng-click='$ctrl.submit()' ><span uk-icon="icon: plus"></span> Add Article</a>
			        	</handler>
					</li>
			        <li>
			        	<div>
			        		<div ng-show='api.loading'><div uk-spinner></div></div>
			        		<div ng-show='api.error'>{{api.error}}</div>
				        	<a ng-hide='api.loading' class="uk-link-muted" href="javascript:void(0)" ng-click='api.submit()' ><span uk-icon="icon: plus"></span> Add Challenge</a>
			        	</div>
			        </li>
			  	</ul>
			</div>
			<div class="uk-width-expand" style="background: white">
				<div class="uk-padding-large uk-padding-remove-top">
					<br>
					<div>
			           	<small><a class="uk-link-muted" href="#!/group/{{module.value.model.group}}/module"> <span uk-icon="chevron-left"></span> EXIT EDITOR </a></small>
					</div>
					<div>

						<div ng-show='subpage.here("article")'>
							<ul class="uk-tab-bottom" uk-tab>
							    <li class="uk-active"><a ng-click='subpage.goto("article")' href="#">Article </a></li>
							    <li style="text-align: center;"><div class="uk-text-muted" ng-hide='api.loading' ng-click='api.submit()' style="padding: 5px; cursor: pointer;">SAVE CHANGES  </div><div class="uk-text-center" ng-show='api.loading'><div uk-spinner="ratio: 0.7"></div></div> </li>
							</ul>
						</div>
						
						<div ng-show='subpage.here("article")' >
							<div ng-show='api.view.loading' class="uk-text-center">
								<br><br><br><br><br>
								<div uk-spinner></div>
							</div>
							<article ng-show='!api.view.loading' class="uk-article"> 
								<div ng-hide='edit_heading'>
								    <h1 class="uk-article-title"><a class="uk-link-reset" href="javascript:void(0)">{{model.title}}</a> <a ng-click='edit_heading=true' href="javascript:void(0)"><span uk-icon="icon: pencil; ratio: 1.5"></span></a></h1>
								</div>
							    <div ng-show='edit_heading'>
							    	<input ng-blur='edit_heading = false' class="uk-input" style="font-size: 24pt" type="text" ng-model='model.title'>
							    </div>
								<div class="uk-alert uk-alert-danger" ng-show='api.error'>{{api.error}}</div>
							    <p class="uk-article-meta">Written by <a ng-repeat='u in model.authors track by $index' href="#/user/{{u._id}}" target="_blank" >{{ u.name + ' ' }}</a>. Posted in <a href="javascript:void(0)">{{ model.module.name }}</a></p>
							    <div id="text-editor" style="min-height: 100vh"></div>
							</article>
						</div>
					</div>
					<div>

						<div ng-show='subpage.here("challenge") || subpage.here("settings") '>
							<ul class="uk-tab-bottom" uk-tab>
							    <li class="uk-active"><a ng-click='subpage.goto("challenge")' href="#">Description </a></li>
							    <li><a ng-click='subpage.goto("settings")' href="#">Response Settings</a></li>
							    <li style="text-align: center;"><div class="uk-text-muted" ng-hide='api.loading' ng-click='api.submit()' style="padding: 5px; cursor: pointer;">SAVE CHANGES  </div><div class="uk-text-center" ng-show='api.loading'><div uk-spinner="ratio: 0.7"></div></div> </li>
							</ul>
						</div>
						
						<div ng-show='subpage.here("challenge")' >
							<div ng-show='api.view.loading' class="uk-text-center">
								<br><br><br><br><br>
								<div uk-spinner></div>
							</div>
							<article ng-show='!api.view.loading' class="uk-article"> 
								<div ng-hide='edit_heading'>
								    <h1 class="uk-article-title"><a class="uk-link-reset" href="javascript:void(0)">{{model.title}}</a> <a ng-click='edit_heading=true' href="javascript:void(0)"><span uk-icon="icon: pencil; ratio: 1.5"></span></a></h1>
								</div>
							    <div ng-show='edit_heading'>
							    	<input ng-blur='edit_heading = false' class="uk-input" style="font-size: 24pt" type="text" ng-model='model.title'>
							    </div>
								<div class="uk-alert uk-alert-danger" ng-show='api.error'>{{api.error}}</div>
							    <p class="uk-article-meta">Written by <a ng-repeat='u in model.authors track by $index' href="#/user/{{u._id}}" target="_blank" >{{ u.name + ' ' }}</a>. Posted in <a href="javascript:void(0)">{{ model.module.name }}</a></p>
							    <div id="challenge-editor" style="min-height: 100vh"></div>
							</article>
						</div>

						<form  ng-show='subpage.here("settings")'>
							<h1>Response Settings</h1>

							<div ng-show='api.error'>{{api.error}}</div>
							<p>Edit Challenge Information</p>

							<hr>
							<p>RESPONSE TYPE</p>
							<div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
					            <label><input class="uk-radio" ng-model='model.output_type' ng-value='0' type="radio" name="response" checked> Code</label>
					            <label><input class="uk-radio" ng-model='model.output_type' ng-value='1' type="radio" name="response"> Single Value</label>
					        </div>

					        <div ng-show='model.output_type==0'>
						        <hr>
						        <small>For code</small>
						        <p>TESTCASE EXPLANATION</p>
					    		<textarea ng-model='model.settings.testcase_description' class="uk-textarea" style="height: 30vh"></textarea>
						        <p>LANGUAGE</p>
						        <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
						            <label><input class="uk-checkbox" checklist-model='model.settings.languages' checklist-value="'python2'" type="checkbox"> Python 2</label>
						            <label><input class="uk-checkbox" checklist-model='model.settings.languages' checklist-value="'python3'" type="checkbox"> Python 3</label>
						            <label><input class="uk-checkbox" checklist-model='model.settings.languages' checklist-value="'cpp'" type="checkbox"> C++</label>
						            <label><input class="uk-checkbox" checklist-model='model.settings.languages' checklist-value="'c'" type="checkbox"> C</label>
						        </div>
						        <p>CHALLENGE ANSWER</p>
						        <button ng-click='show_testcases()' class="uk-button uk-button-default">Configure Testcases</button>

								<div id="modal-challenge-testcases" uk-modal>
								    <div class="uk-modal-dialog uk-modal-body">
								        <h2 class="uk-modal-title">Configure Testcases</h2>
								        <div class="uk-child-width-1-3" uk-grid>
								        	<div>
								        		TESTCASES
								        		<br>
								        		<div style="height: 70vh; overflow-y: scroll;">
													<ul class="uk-list uk-list-striped">
													    <li  ng-repeat='i in model.testcases track by $index' ><a class="uk-link-muted" ng-click='model.selected = $index' href="javascript:void(0)">Test Case {{$index}}</a></li>
													</ul>
								        		</div>
								        		<button ng-click='model.testcases.push({ input: "" , output: "", sample: false })' class="uk-button uk-button-small uk-button-default" >ADD NEW</button>
								        	</div>
									    	<div ng-show='model.selected != null ' class="uk-width-expand">
									    		Input 
									    		<textarea ng-model='model.testcases[model.selected].input' class="uk-textarea" style="height: 30vh"></textarea>
									    		Output 
									    		<textarea ng-model='model.testcases[model.selected].output' class="uk-textarea" style="height: 30vh"></textarea>
									    		Points 
												<div class="uk-margin uk-margin-remove-top">
										            <input ng-model='model.testcases[model.selected].points' class="uk-input" type="number" placeholder="10">
												</div>
										        <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
										            <label><input ng-model='model.testcases[model.selected].sample' class="uk-checkbox" type="checkbox" checked> Use as sample testcase</label>
										        </div>
									    	</div>
								        </div>

								        <p class="uk-text-right">
								            <button class="uk-button uk-button-default uk-modal-close" type="button">Close</button>
								        </p>
								    </div>
								</div>
					        </div>
					        <div ng-show='model.output_type==1'>
						        <hr>
						        <small>For single Value</small>
						        <p>DATA TYPE</p>
								<div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
						            <label><input ng-model='model.settings.data_type' ng-vale='integer' class="uk-radio" type="radio" name="data-type" checked> Integer</label>
						            <label><input ng-model='model.settings.data_type' ng-vale='float' class="uk-radio" type="radio" name="data-type"> Float</label>
						            <label><input ng-model='model.settings.data_type' ng-vale='string' class="uk-radio" type="radio" name="data-type"> String</label>
						        </div>
						        <p>FLOAT PRECISION</p>
								<div class="uk-child-width-1-4" uk-grid>
									<div class="uk-margin">
							            <input ng-model='model.settings.precision' class="uk-input" type="number" placeholder="0.00">
									</div>
						        </div>
						        <p>STRIP INPUT</p>
						        <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
						            <label><input ng-model='model.settings.strip' class="uk-checkbox" type="checkbox" checked> Strip input</label>
						        </div>
						        <p>CHALLENGE ANSWER</p>
								<div class="uk-child-width-1-4" uk-grid>
									<div class="uk-margin">
							            <input ng-model='model.answer' class="uk-input" type="text" placeholder="Answer">
									</div>
						        </div>
					        </div>
					        <hr>
						</form>
					</div>


					<div ng-hide='subpage.here("article") || subpage.here("challenge") || subpage.here("settings")' class="uk-padding-large uk-text-center">
						<br><br><br><br>
						<h2 class="uk-text-muted">Nothing is selected</h2>
					</div>
				</div>

			</div>
		</div>

		<div id="modal-module-title" uk-modal>
		    <div class="uk-modal-dialog uk-modal-body">
		    	<entity bind='module-model'>
		    		<handler bind='{{$ctrl.put.config.id}}' model='$ctrl.value.model'>
				        <h2 class="uk-modal-title">Edit Module Description</h2>
				        <p></p>
				        <div ng-hide='$ctrl.api.config.state.loading'>
					        <small>Module Name</small>
					        <div class="uk-margin">
					            <input class="uk-input" ng-model='$ctrl.model.name' type="text" placeholder="Module Name">
					        </div>
					        <small>Module Description</small>
						    <textarea class="uk-textarea" ng-model='$ctrl.model.description'></textarea>
				        </div>
				        <div ng-show='$ctrl.api.config.state.loading '>
				        	<div uk-spinner></div>
				        </div>
				        <p ng-hide='$ctrl.api.config.state.loading' class="uk-text-right">
				            <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
				            <button ng-click='$ctrl.submit()' class="uk-button uk-button-primary" type="button">Save</button>
				        </p>
		    		</handler>
		    	</entity>
		    </div>
		</div>

		<div id="modal-module-badge" uk-modal>
		    <div class="uk-modal-dialog uk-modal-body">
		        <h2 class="uk-modal-title">Choose Badge Rewards</h2>
		        <div class="uk-child-width-1-3" uk-grid>
		        	<div>
		        		<search field='name' bind='module-badge-search'>
			        		<div>
				        		<input  ng-model='$ctrl.query' ng-change='$ctrl.change()' type="text" class="uk-input" placeholder="Search Badge...">
			        		</div>
			        		<div ng-show='$ctrl.query' class="uk-padding-remove" uk-dropdown='mode: click'>
				        		<div style="max-height: 40vh; overflow-y: scroll;">
									<ul class="uk-list uk-list-striped">
										<li style="margin-top: 5px" ng-show='($ctrl.api.config.state.loading || $ctrl.timer>0) && $ctrl.query'><div uk-spinner></div></li>
									    <li ng-show='$ctrl.query && !$ctrl.api.config.state.loading'>
											<p ng-hide='$ctrl.model.length' class="uk-text-muted"><small>No search results.</small></p>
										</li>
									    <li  ng-repeat='i in $ctrl.model'><a class="uk-link-muted" ng-click='$ctrl.view(i)' href="javascript:void(0)">{{i.name}}</a></li>
									</ul>
				        		</div>
			        		</div>
		        		</search>
		        		<handler bind='module-badge-list'>
			        		<div style="height: 40vh; overflow-y: scroll;">
								<ul class="uk-list uk-list-striped">
								    <li  ng-repeat='i in $ctrl.model'><a class="uk-link-muted" href="javascript:void(0)" ng-click='$ctrl.view(i)'>{{i.badge.name}}</a></li>
								</ul>
			        		</div>
		        		</handler>
		        		<!-- <button class="uk-button uk-button-small uk-button-default" ng-click='badge_forge()'><small>FORGE NEW BADGE</small></button> -->
		        	</div>
			    	<div class="uk-width-expand">
			    		<entity bind='module-badge-model'>
				    		<div ng-hide='$ctrl.value.model.name'>
				    			Nothing selected
				    		</div>
				    		<div>
				    			<handler bind='{{$ctrl.get.config.id}}' model='$ctrl.value.model'>
									<div ng-show='$ctrl.api.config.state.loading' class="uk-text-center"><div uk-spinner></div></div>
									<div ng-show='$ctrl.api.config.feedback.error'>ERROR: {{$ctrl.api.config.feedback.error}}</div>
									<div ng-hide='$ctrl.api.config.state.loading || !$ctrl.model.name'>
							    		<img class="uk-align-center" src="/assets/badge-sample.png" width="140px"  height="140px">
						    			<div style="text-align: center;">
							    			<h4 style="margin: 0px">{{$ctrl.model.name}}</h4>
							    			<i>{{$ctrl.model.description}}</i>
							    			<br><br>
							    			<button ng-hide='is_badge_selected()' ng-click='select_badge()' class="uk-button uk-button-small uk-button-primary">SELECT</button>
							    			<button ng-show='is_badge_selected()' ng-click='delete_badge()' class="uk-button uk-button-small uk-button-secondary">REMOVE</button>
						    			</div>
									</div>

				    			</handler>
				    		</div>
			    		</entity>
			    	</div>
		        </div>

		        <p class="uk-text-right">
		            <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
		            <button class="uk-button uk-button-primary" type="button">Save</button>
		        </p>
		    </div>
		</div>
	</div>
</div>